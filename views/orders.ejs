<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Fixed table header</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel="stylesheet" href="../css/table.css">

</head>

<body>

    <nav class="navbar navbar-dark bg-dark py-3">
        <a class="navbar-brand" href="/dashboard"><i class="fas fa-arrow-left"></i> Back</a>
    </nav>
    <!-- partial:index.partial.html -->
    <section>
        <!--for demo wrap-->
        <h1>Your Orders</h1>
        <div class="tbl-header">
            <table cellpadding="0" cellspacing="0" border="0">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Dish Name</th>
                        <th>Cost</th>

                        <th>Plates</th>
                        <!--th>Email-ID</th>
                            <th>Phone Number</th-->
                    </tr>
                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table cellpadding="0" cellspacing="0" border="0">
                <tbody>
                    <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td>
                                <%= data[i].author.username %>
                            </td>

                            <!--td>
                                    <%= data[i].author.username %>
                                </td-->
                            <!--td> HII
                                    <%= data[i].food[1] %>
                                </td>
                                <td>
                                    HII
                                    <%= data[i].food[2] %>
                                </td>
                                <td>
    
                                    <%= data[i].food[3] %>
                                </td-->
                            <% for(var j = 0; j < data[i].food.length; j++) { %>
                                <tr>
                                    <td></td>
                                    <td>
                                        <%= data[i].food[j].name %>
                                    </td>
                                    <td>
                                        <%= data[i].food[j].cost %>
                                    </td>
                                    <td>
                                        <%= data[i].food[j].plates %>
                                    </td>
                                    <% } %>

                                </tr>
                                <% } %>
                </tbody>
            </table>
        </div>
    </section>


    <!-- follow me template -->
    <div class="made-with-love">

        <a target="_blank" href="https://codepen.io/nikhil8krishnan">FoodCloud inc </a>
    </div>
    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="../js/table.js"></script>

</body>

</html>